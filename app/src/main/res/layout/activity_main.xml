<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="trendy.coloc.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connection native"
        android:id="@+id/connection_native"
        android:layout_marginTop="102dp"
        android:onClick="ConnNative"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connection facebook"
        android:id="@+id/bfb"
        android:onClick="ConnFb"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/connection_native"
        android:layout_alignEnd="@+id/connection_native" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:id="@+id/bregister"
        android:onClick="Register"
        android:layout_marginTop="67dp"
        android:layout_below="@+id/bfb"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Demande coloc"
        android:id="@+id/bdmd"
        android:onClick="DmdColoc"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/bregister"
        android:layout_alignStart="@+id/bregister" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chercher demande coloc"
        android:id="@+id/rechercher"
        android:onClick="ChercherDmdColoc"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/bregister"
        android:layout_alignStart="@+id/bregister" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Liste des demandes"
        android:id="@+id/button"
        android:onClick="ListeDemandes"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/connection_native"
        android:layout_alignEnd="@+id/connection_native" />


</RelativeLayout>
